- content_for :page_header_title, 'Browse traces'
- content_for :page_header_text, 'Browse all available traces'
- content_for :main_header, render('shared/filters')

%p
  #{@app_traces.count} traces found

%table
  %thead
    %tr
      %th App
      %th Os
      %th Connectivity 
      %th Sockets 
      %th Version
      %th Created at
  - @app_traces.each do |app_trace|
    %tr
      %td= app_trace.app.capitalize
      %td= app_trace.os.capitalize
      %td= app_trace.connectivity.capitalize
      %td= app_trace.socket_traces_count
      %td= app_trace.version
      %td= app_trace.created_at.to_date
      %td= link_to 'Show', app_trace_path(app_trace)
      %td= link_to 'Delete', app_trace_path(app_trace), method: :delete, data: { confirm: 'Are you sure?' }
