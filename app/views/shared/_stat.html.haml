- stat_data = trace.stat_data(stat)
.card.stat
  .card-content
    %span.card-title
      = stat.pretty_name
    .content
      - if !trace.analysis_computed?
        .no-data
          Analysis is being computed...
      - elsif stat_data.empty?
        .no-data
          No data for this trace.
      - else
        - if stat.proportion?
          = pie_chart stat_data
        - elsif stat.cdf?
          = line_chart stat_data, max: 100, ytitle: "CDF", xtitle: stat.node, library: {xAxis: {type: 'linear'}}
        - elsif stat.sum_by_group?
          = column_chart stat_data
        - elsif stat.pc_true_for_nodes?
          = column_chart stat_data, max: 1

  - if stat.description.present?
    .card-action= stat.description
